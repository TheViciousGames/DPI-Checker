<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffd300"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/currentDPIValueTextView"
        android:layout_centerHorizontal="true"
        android:text="DPI"
        android:textColor="#000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/refreshButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@id/currentDPIValueTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_custom"
        android:text="@string/refresh"
        android:textColor="#ffd300"
        android:textSize="20sp" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@id/refreshButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_custom"
        android:text="@string/exit"
        android:textColor="#ffd300"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/currentDPIValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:text="100"
        android:textColor="#000000"
        android:textSize="100sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/revertingsecondsLeftTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentDPIValueTextView"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />


</RelativeLayout>